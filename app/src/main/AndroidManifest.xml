<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.aswin_000.techkarma"
    >

    <application

        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:screenOrientation="portrait"
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GameMenu"
            android:label="@string/title_activity_game_menu"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:theme="@style/aboutheme"
            android:screenOrientation="portrait"
            android:name=".About"
            android:label="@string/title_activity_about"
            android:parentActivityName=".GameMenu" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.aswin_000.techkarma.GameMenu" />
        </activity>
        <activity
            android:theme="@style/settingstheme"
            android:screenOrientation="portrait"
            android:name=".GameSettings"
            android:label="@string/title_activity_game_settings"
            android:parentActivityName=".GameMenu" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.aswin_000.techkarma.GameMenu" />
        </activity>
        <activity
            android:theme="@style/highscorestheme"
            android:screenOrientation="portrait"
            android:name=".HighScores"
            android:label="@string/title_activity_high_scores"
            android:parentActivityName=".GameMenu" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.aswin_000.techkarma.GameMenu" />
        </activity>
        <activity
            android:theme="@style/youwontheme"
            android:screenOrientation="portrait"
            android:name=".YouWon"
            android:label="@string/title_activity_you_won"
            android:parentActivityName=".GameMenu" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.aswin_000.techkarma.GameMenu" />
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".PlayNow"
            android:label="@string/title_activity_play_now"
            android:parentActivityName=".GameMenu" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.aswin_000.techkarma.GameMenu" />
        </activity>

    </application>

</manifest>
